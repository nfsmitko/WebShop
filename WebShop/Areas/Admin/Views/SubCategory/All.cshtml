@model IEnumerable<SubCategoryQueryModel>
@{
    ViewBag.Title = "All Sub Category";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sub categories</h3>
            </div>

            <div class="card-body table-responsive p-0 text-center justify-content-center">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Sub category Name</th>
                            <th>Product's in this sub category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subCategory in Model)
                        {
                            <tr>
                                <td>@subCategory.Name</td>
                                <td>@subCategory.Products.Count()</td>
                                <td>
                                    <a asp-area="Admin" asp-action="Edit" asp-controller="SubCategory" asp-route-id="" class="btn btn-block btn-outline-info btn-xs">Edit</a>
                                    <a asp-area="Admin" asp-action="Delete" asp-controller="SubCategory" asp-route-id="" class="btn btn-block btn-outline-warning btn-xs">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>