@model CategoryModel

<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <form method="post">
        <fieldset>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label text-light">Title</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div id="DescriptionsContainer">
                @*<label asp-for="Description"></label>*@
                <a class="btn btn-outline-success text-light" style="margin-bottom: 10px" onclick="AddMoreSubCategory()">Add new Subcategory!</a>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </fieldset>
    </form>
</div>

